@page
@inject EronNew.Resources.GlobalCultureService SharedLocalizer
@using EronNew.Helpers
@using EronNew.Resources
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<div class="row mt-5">
    <div class="card">
        <div class="card-header">@SharedLocalizer.GetLocalized(StaticHelpers.GetDescription(LocalizedPhrases.Personalsettings))</div>
        <div class="card-body">
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-outline mt-3">
                    <input asp-for="Username" class="form-control" disabled />
                    <label class="form-label" asp-for="Username"></label>
                </div>
                <div class="form-outline mt-3">
                    <input asp-for="Input.FirstName" class="form-control" />
                    <label class="form-label" asp-for="Input.FirstName"></label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-outline mt-3">
                    <input asp-for="Input.LastName" class="form-control" />
                    <label class="form-label" asp-for="Input.LastName"></label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-outline mt-3">
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <label class="form-label" asp-for="Input.PhoneNumber"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <button id="update-profile-button" type="submit" class="btn btn-primary mt-3">@SharedLocalizer.GetLocalized(StaticHelpers.GetDescription(LocalizedPhrases.Save))</button>
            </form>
        </div>
        <div class="card-footer">
            <partial name="_StatusMessage" model="Model.StatusMessage" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
