@page
@model NotesModel
@inject EronNew.Resources.GlobalCultureService SharedLocalizer
@using EronNew.Helpers
@using EronNew.Resources
@{
    ViewData["Title"] = "Edit My Card";
    ViewData["ActivePage"] = ManageNavPages.Notes;
}
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row justify-content-center justify-content-lg-between">
    <!-- Left column -->
    <div id="sidenav-inner" 
         class="d-md-flex flex-md-row scrollbar-4 scrollbar-navy-blue-skin overflow-scroll col-xl-4 d-lg-block bg-light shadow-1 collapse" >
        <!--Section: Contacts-->
        <section class="sticky-top pt-3 shadow-2-strong">
            <h6 class="font-weight-bold mb-3 text-center text-lg-left dark-grey-text">@SharedLocalizer.GetLocalized(StaticHelpers.GetDescription(LocalizedPhrases.Notes))</h6>
            <div class="list-group list-group-naked mb-3">
                @foreach (var item in Model.Input)
                {
                <a id="noteGroup_@item.Id" href="#" data-noteid="@item.Id" data-postid="@item.PostId" class="list-group-item list-group-item-action d-flex align-items-center noteHeader mb-1" aria-current="true">
                    <img src="@item.Post.UrlImage" class="border rounded-circle me-2" alt="" style="width: 65px; height: 40px" />
                    <strong class="mb-auto">#@item.PostId - @item.Post.SubAreas.AreaName</strong>
                    <button type="button" class="btn-close btn-sm mb-auto ms-auto deleteNoteGroup" data-postid="@item.Id" aria-label="Close"></button>
                </a>
                }
            </div>
        </section>
    </div>
    <!-- Grid column -->
    <!-- Center column -->
    <div class="col-xl-8 col-12 mb-4 mb-lg-0 border-left border-right">
        <!--Section: Messages-->
        <section class="inner-content">
            <div class="d-flex mt-3">
                <button class="navbar-toggler btn shadow-0 p-0 me-3 d-block d-lg-none"
                        type="button"
                        data-mdb-toggle="collapse"
                        data-mdb-target="#sidenav-inner"
                        aria-controls="sidenav-inner"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <i class="fas fa-bars fa-lg"></i>
                </button>
                <div id="previewTile" class="list-group-item list-group-item-action d-flex align-items-center">
                    <a href="#" class="list-group-item list-group-item-action d-flex align-items-center noteHeader mb-1" aria-current="true">
                        <img src="/images/logo.png" class="border rounded-circle me-2" alt="" style="width: 60px; height: 40px" />
                        <strong class="mb-auto">Select a Post to see your Notes</strong>
                    </a>
                </div>
            </div>
            <div class="chatList scrollbar-3 scrollbar-navy-blue-skin overflow-scroll">

            </div>
        </section>
        <!--Section: Messages-->
        <!--Section: Message input-->
        <section id="message-input" class="fixed-bottom card bg-light">
            <div class="card-body">
                <form class="d-flex">

                    <div class="w-100 mx-2">
                        <textarea class="form-control" name="note" id="textAreaExample" rows="1" placeholder="Type a message"></textarea>
                    </div>

                    <button type="button" class="btn btn-primary px-3 sendButton">
                        <strong class="text-light">@SharedLocalizer.GetLocalized(StaticHelpers.GetDescription(LocalizedPhrases.Submit))</strong>
                    </button>
                </form>
            </div>
        </section>
        <!--Section: Message input-->
    </div>
</div>
<!-- Center column -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
