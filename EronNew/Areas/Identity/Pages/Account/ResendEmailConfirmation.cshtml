@page
@model ResendEmailConfirmationModel
@inject EronNew.Resources.GlobalCultureService SharedLocalizer
@{
    ViewData["Title"] = "Resend email confirmation";
}

<h4>
    @SharedLocalizer.GetLocalized("Συμπλήρωσε το email για να σου αποσταλλεί το email επαναφοράς του κωδικού.")
</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="md-form form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@SharedLocalizer.GetLocalized("Επαναποστολή")</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
