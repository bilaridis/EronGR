@using Microsoft.AspNetCore.Identity
@using EronNew.Helpers
@using EronNew.Resources
@namespace EronNew.Models
@model EronNew.Models.PostViewModel

@inject EronNew.Resources.GlobalCultureService SharedLocalizer
@inject SignInManager<ExtendedIdentityUser> SignInManager
@inject UserManager<ExtendedIdentityUser> UserManager
@{
    ViewData["Title"] = "Details";
    var userOb = await UserManager.GetUserAsync(User);
    var user = userOb?.Id;

}
@section metatags
{
    <meta property="fb:app_id" content="407388710507530" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Eron.gr - @Model.Post.TitleOfPost" />
    <meta property="og:url" content="https://www.eron.gr/Posts/Details/@Model.Post.id" />
    <meta property="og:image" content="https://www.eron.gr/@Model.Post.Images.First().UrlImage/Images/@Model.Post.Images.First().ImageName" />
    <meta property="og:description" content="@Model.Post.SaleCategory: @SharedLocalizer.GetLocalized(Model.Post.SaleCategory) - @(Model.Post.PriceTotal.HasValue ? Model.Post.PriceTotal.Value.ToString("C") : 0) - @Html.Raw(Model.Post.Square) m2 - @SharedLocalizer.GetLocalized(Model.Post.SubTypeInformation.Desc) - @SharedLocalizer.GetLocalized(Model.Post.SubTypeInformation.SubDesc) - @Model.Post.TitleOfPost" />
}
<nav class="navbar navbar-expand-md mt-2 rounded gradient-title text-primary px-2">
    <ul class="navbar-nav me-auto">
        <li>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb text-light">
                    <li class="breadcrumb-item"><a class="text-light" data-i18n="@Model.Post.SaleCategory"> </a></li>
                    <li class="breadcrumb-item">@Model.Post.TitleOfPost</li>
                    <li class="breadcrumb-item" data-i18n="@Model.Post.SubTypeInformation.Desc"> </li>
                    <li class="breadcrumb-item" data-i18n="@Model.Post.SubTypeInformation.SubDescEnglish"> </li>
                    <li class="breadcrumb-item text-success"><span data-i18n="Ad Code"></span> - @Model.Post.id</li>
                </ol>
            </nav>
        </li>
    </ul>
    <ul class="navbar-nav ms-auto">
        <li>
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle"
                        type="button"
                        id="ddPremiumLang"
                        data-mdb-toggle="dropdown"
                        aria-expanded="false">
                    <i class="fas fa-language fa-1x"></i>
                </button>
                <ul id="AdvLanguages" class="dropdown-menu dropdown-menu-end switch-locale" aria-labelledby="ddPremiumLang">
                </ul>
            </div>
        </li>
    </ul>
</nav>
<div class="row mt-3">
    <!-- Section: Main panel -->
    <section class="mb-3 mt-1 col-12 p-0 p-sm-2">
        <!-- Card -->
        <div class="card">
            <div class="card-header">
                <div class="col-md-12">
                    <div class="ecommerce-gallery vertical">
                        <div class="row">
                            <div class="col-4 col-sm-3">
                                <div class="multi-carousel vertical" data-mdb-items="2">
                                    <div class="multi-carousel-inner">
                                        <div class="multi-carousel-item active">
                                            <img src="@ViewData["domain"]/@(Model.Post.Images.First().UrlImage)Thumbnails/@Model.Post.Images.First().ImageName"
                                                 data-mdb-img="@ViewData["domain"]/@(Model.Post.Images.First().UrlImage)Images/@Model.Post.Images.First().ImageName"
                                                 alt="Gallery image 1"
                                                 class="active w-100" />
                                        </div>
                                        @foreach (PostsImages image in Model.Post.Images.Skip(1))
                                        {
                                            <div class="multi-carousel-item">
                                                <img src="@ViewData["domain"]/@(image.UrlImage)Thumbnails/@image.ImageName"
                                                     data-mdb-img="@ViewData["domain"]/@(image.UrlImage)Images/@image.ImageName"
                                                     alt="@image.ImageName"
                                                     class="w-100" />
                                            </div>
                                        }
                                    </div>
                                    <button class="carousel-control-prev hover-overlay" tabindex="0" type="button" data-mdb-slide="prev">
                                        <span class="carousel-control-prev-icon text-primary" aria-hidden="true"></span>
                                        <div class="mask gradient-top"></div>
                                    </button>
                                    <button class="carousel-control-next hover-overlay" tabindex="0" type="button" data-mdb-slide="next">
                                        <span class="carousel-control-next-icon text-primary" aria-hidden="true"></span>
                                        <div class="mask gradient-bottom"></div>
                                    </button>

                                </div>
                            </div>
                            <div class="col-8 col-sm-9 shadow-3 position-relative">
                                <a href="#!" class="position-absolute top-0 end-0" style="z-index:10;" data-mdb-toggle="modal" data-mdb-target="#centralModalPreview360">
                                    <i class="fas fa-globe fa-2x text-primary" data-mdb-toggle="tooltip" title="@SharedLocalizer.GetLocalizedHtml(StaticHelpers.GetDescription(LocalizedPhrases.Preview360))"></i>
                                </a>
                                <div class="lightbox">
                                    <img src="@ViewData["domain"]/@(Model.Post.Images.First().UrlImage)Images/@Model.Post.Images.First().ImageName" alt="Gallery image 1" class="ecommerce-gallery-main-img active w-100" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row p-0 justify-content-between gradient shadow-1">
                    <nav class="navbar navbar-expand-md text-dark col-12 rounded">
                        <div class="me-auto">
                            <nav aria-label="breadcrumb text-light">
                                <ol class="breadcrumb d-inline-flex pl-0 pt-0 font-smaller">
                                    <li class="breadcrumb-item breadcrumb-nav text-light"><strong>@Html.Raw(Model.Post.Square) m<sup>2</sup></strong></li>
                                    <li class="breadcrumb-item breadcrumb-nav text-light"><i class="fas fa-bed pt-1 pr-1"></i> @Html.Raw(Model.Post.Bedroom.HasValue ? Model.Post.Bedroom.Value.ToString() : "0")</li>
                                    <li class="breadcrumb-item breadcrumb-nav text-light"><i class="fas fa-bath pt-1 pr-1"></i> @Html.Raw(Model.Post.Bathroom.HasValue ? Model.Post.Bathroom.Value.ToString() : "0")</li>
                                    <li class="breadcrumb-item breadcrumb-nav text-light"><i class="fas fa-home pt-1 pr-1"></i> @Html.Raw(Model.Post.ConstructionYear)</li>
                                </ol>
                            </nav>
                        </div>
                    </nav>
                </div>
                <div class="row m-md-2 m-sm-0 justify-content-between shadow-5">
                    <div class="col-md-8 col-lg-6 p-0">
                        <div class="card-body row">
                            <ul class="list-group">
                                <li class="list-group-item active" aria-current="true"><span data-i18n="Ad Code"></span> - @Model.Post.id</li>
                                <li class="list-group-item d-inline-flex">
                                    <div class="text-right col-4 text-dark" data-i18n="Price"></div>
                                    <div class="text-left col-8 ">
                                        <a href="#" class="indigo-text">
                                            @if (Model.Post.PriceTotal.HasValue && Model.Post.PriceTotal.Value > 99)
                                            {
                                                @SharedLocalizer.ConvertCurrency(Model.Post.Currency, Model.Post.PriceTotal.Value, Model.Post.Currency)
                                            }
                                            else
                                            {
                                                <span class="badge badge-default rounded" data-i18n="Ask for the Price">
                                                    @SharedLocalizer.GetLocalizedHtml(StaticHelpers.GetDescription(LocalizedPhrases.AskforthePrice))
                                                </span>
                                            }
                                        </a>
                                    </div>
                                </li>
                                <li class="list-group-item d-inline-flex"">
                                    <div class="text-right col-4 text-dark" data-i18n="Year of Renovation"></div>
                                    <div class="text-left col-8">@Html.Raw(Model.Post.RenovationYear) </div>
                                </li>
                                <li class="list-group-item d-inline-flex"">
                                    <div class="text-right col-4 text-dark" data-i18n="floor"></div>
                                    <div class="text-left col-8">
                                        @(Model.Post.Floor == 0 ? " Ισόγειο" : Model.Post.Floor.ToString()) @if (Model.Post.Floor > 0)
                                        {<sup>ος</sup>}
                                    </div>
                                </li>
                                <li class="list-group-item d-inline-flex"">
                                    <div class="text-right col-4 text-dark" data-i18n="Home Energy Rate"></div>
                                    <div class="text-left col-8 ">
                                        @if (Model.Post.EnergyEfficiency == "A+")
                                        {<button type="button" class="btn text-light" style="background-color: #036703">Α+</button>}
                                        @if (Model.Post.EnergyEfficiency == "A")
                                        {<button type="button" class="btn text-light" style="background-color: #048004">Α</button>}
                                        @if (Model.Post.EnergyEfficiency == "Β+")
                                        {<button type="button" class="btn text-light" style="background-color: #009c02">Β+</button>}
                                        @if (Model.Post.EnergyEfficiency == "Β")
                                        {<button type="button" class="btn text-light" style="background-color: #99cd00">Β</button>}
                                        @if (Model.Post.EnergyEfficiency == "Γ")
                                        {<button type="button" class="btn text-light" style="background-color: #fdcc03">Γ</button>}
                                        @if (Model.Post.EnergyEfficiency == "Δ")
                                        {<button type="button" class="btn text-light" style="background-color: #fe6601">Δ</button>}
                                        @if (Model.Post.EnergyEfficiency == "Ε")
                                        {<button type="button" class="btn text-light" style="background-color: #f90203">Ε</button>}
                                        @if (Model.Post.EnergyEfficiency == "Ζ")
                                        {<button type="button" class="btn text-light" style="background-color: #a03000">Ζ</button>}
                                        @if (Model.Post.EnergyEfficiency == "Η")
                                        {<button type="button" class="btn text-light" style="background-color: #7e0100">Η</button>}
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-4 col-lg-6">
                        <div id="ContactInfo" class="d-grid">
                            <button id="getContactInfo" data-postid="@Model.Post.id" type="button" class="btn btn-info w-100" data-i18n="Contact Info"></button>
                        </div>
                    </div>
                    <div class="col-12 text-smaller p-0 d-none">
                        <div class="text-left col-12 p-1 mb-1 text-dark flex-row">
                            @if (Model.ExtraInformation.Investment)
                            {
                                <div class="chip chip-sm white-text px-2 shadow-1-strong">
                                    <i class="fas fa-check-circle mr-2 mt-1 pt-0"></i>@SharedLocalizer.GetLocalizedHtml(StaticHelpers.GetDescription(LocalizedPhrases.Investment))
                                </div>
                            }
                            @if (Model.ExtraInformation.Offer)
                            {
                                <div class="chip chip-sm white-text px-2 shadow-1-strong">
                                    <i class="fas fa-check-circle mr-2 mt-1 pt-0"></i>@SharedLocalizer.GetLocalizedHtml(StaticHelpers.GetDescription(LocalizedPhrases.Offer))
                                </div>
                            }
                            @if (Model.ExtraInformation.NewConstruction)
                            {
                                <div class="chip chip-sm white-text px-2 shadow-1-strong">
                                    <i class="fas fa-check-circle mr-2 mt-1 pt-0"></i>@SharedLocalizer.GetLocalizedHtml(StaticHelpers.GetDescription(LocalizedPhrases.NewConstruction))
                                </div>
                            }
                            @if (Model.ExtraInformation.BrokerFee)
                            {
                                <div class="chip chip-sm white-text px-2 shadow-1-strong">
                                    <i class="fas fa-check-circle mr-2 mt-1 pt-0"></i> @SharedLocalizer.GetLocalizedHtml(StaticHelpers.GetDescription(LocalizedPhrases.BrokerFee))
                                </div>
                            }
                            else
                            {
                                <div class="chip chip-sm white-text px-2 shadow-1-strong">
                                    <i class="fas fa-times-circle mr-2 mt-1 pt-0"></i>@SharedLocalizer.GetLocalizedHtml(StaticHelpers.GetDescription(LocalizedPhrases.BrokerFee))
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer d-md-flex flex-sm-row justify-content-md-between">
                    <div class="d-flex align-items-start">
                        <div class="p-2 wish-container">
                            @if (Model.Post.WishLists.Any(x => x.AspNetUserId == user && x.Active == true))
                            {
                                <a data-postid="@Model.Post.id" href="#!" id="addToWhishList" class="details-heart details-unwish card-link" data-mdb-toggle="tooltip" title="@SharedLocalizer.GetLocalized(StaticHelpers.GetDescription(LocalizedPhrases.WishList))">
                                    <i class="fas fa-heart fa-1x text-danger"></i>
                                </a>
                            }
                            else
                            {
                                <a data-postid="@Model.Post.id" href="#!" id="addToWhishList" class="details-heart details-wish card-link" data-mdb-toggle="tooltip" title="@SharedLocalizer.GetLocalized(StaticHelpers.GetDescription(LocalizedPhrases.WishList))">
                                    <i class="far fa-heart fa-1x text-danger"></i>
                                </a>
                            }
                        </div>

                        <div class="p-2 note-container">
                            <a class="card-link" data-mdb-toggle="modal" data-mdb-target="#centralModalNotes" data-userid="@Model.CardProfile.AspNetUserId">
                                <i class="fas fa-pencil-alt fa-1x prefix text-dark" data-mdb-toggle="tooltip" title="@SharedLocalizer.GetLocalized(StaticHelpers.GetDescription(LocalizedPhrases.MyNotes))"></i>
                            </a>
                        </div>
                        <div class="p-2">
                            <a class="card-link" id="printClick">
                                <i class="fas fa-print fa-1x prefix text-dark" data-mdb-toggle="tooltip" title="@SharedLocalizer.GetLocalized(StaticHelpers.GetDescription(LocalizedPhrases.Print))"></i>
                            </a>
                        </div>
                        <div class="p-2 view-container">
                            <a class="card-link">
                                <i class="fas fa-eye fa-1x prefix text-dark" data-mdb-toggle="tooltip" title="@SharedLocalizer.GetLocalized(StaticHelpers.GetDescription(LocalizedPhrases.views))"></i> <label class=" text-smaller text-dark"> @Model.CounterOfView <label data-i18n="views"></label> </label>  |
                            </a>
                        </div>

                        <div class="p-2">
                            <a class="card-link fb-xfbml-parse-ignore"
                               href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fwww.eron.gr%2FPosts%2FDetails%2F@(Model.Post.id)"
                               target="popup"
                               onclick="window.open('https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fwww.eron.gr%2FPosts%2FDetails%2F@(Model.Post.id)','popup','width=400,height=500'); return false;"
                               data-toggle="tooltip" title="@SharedLocalizer.GetLocalized(StaticHelpers.GetDescription(LocalizedPhrases.Share))">
                                <i class="fab fa-facebook-square blue-text darken-4"></i>
                            </a>
                        </div>

                    </div>
                    <div class="p-2">
                        <a href="~/Card/Index/@Model.Post.OwnerId" class="card-link pr-1">@Html.Raw(Model.CardProfile.Title) <i class="fas fa-external-link-alt fa-1x"></i></a>
                        @if (Model.Post.Reserved)
                        {
                            <small class="text-muted"> | @Html.Raw(Model.Post.CreatedDate.Value.ToString("dd/MM/yyyy")) | <span class="badge bg-warning" data-i18n="Locked"></span></small>
                        }
                        else if (Model.Post.Deleted)
                        {
                            <small class="text-muted"> | @Html.Raw(Model.Post.CreatedDate.Value.ToString("dd/MM/yyyy")) | <span class="badge bg-danger" data-i18n="Inactive"></span></small>
                        }
                        else if (Model.Post.Sold)
                        {
                            <small class="text-muted"> | @Html.Raw(Model.Post.CreatedDate.Value.ToString("dd/MM/yyyy")) | <span class="badge bg-secondary" data-i18n="Completed"></span></small>
                        }
                        else
                        {
                            <small class="text-muted"> | @Html.Raw(Model.Post.CreatedDate.Value.ToString("dd/MM/yyyy")) | <span class="badge bg-primary" data-i18n="Active"></span></small>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Section: Main panel -->

</div>
