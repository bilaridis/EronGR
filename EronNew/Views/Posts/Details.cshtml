                                <input class="form-check-input" asp-for="ExtraInformation.AirCondition" type="checkbox" disabled id="cb03">
                                <label class="form-check-label" for="cb03" data-i18n="Air Condition"></label>
                            </fieldset>
                        </div>
                        <hr class="my-0">
