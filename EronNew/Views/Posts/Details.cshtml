@using Microsoft.AspNetCore.Identity
@using EronNew.Helpers
@using EronNew.Resources
@namespace EronNew.Models
@model EronNew.Models.PostViewModel

@inject EronNew.Resources.GlobalCultureService SharedLocalizer
@inject SignInManager<ExtendedIdentityUser> SignInManager
@inject UserManager<ExtendedIdentityUser> UserManager
@{
    ViewData["Title"] = "Details";
    var userOb = await UserManager.GetUserAsync(User);
    var user = userOb?.Id;
}
@section metatags
{
    <meta property="fb:app_id" content="407388710507530" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Eron.gr - @Model.Post.TitleOfPost" />
    <meta property="og:url" content="https://www.eron.gr/Posts/Details/@Model.Post.id" />
    <meta property="og:image" content="https://www.eron.gr/@Model.Post.Images.First().UrlImage/Images/@Model.Post.Images.First().ImageName" />
    <meta property="og:description" content="@Model.Post.SaleCategory: @SharedLocalizer.GetLocalized(Model.Post.SaleCategory) - @(Model.Post.PriceTotal.HasValue ? Model.Post.PriceTotal.Value.ToString("C") : 0) - @Html.Raw(Model.Post.Square) m2 - @SharedLocalizer.GetLocalized(Model.Post.SubTypeInformation.Desc) - @SharedLocalizer.GetLocalized(Model.Post.SubTypeInformation.SubDesc) - @Model.Post.TitleOfPost" />
}
