                                <label class="form-check-label" for="cb12" data-i18n="Safety Frames"></label>
                            </fieldset>
                            <fieldset class="form-check mb-2 pl-1 pr-1 col-6 col-sm-4 col-lg-3">
                                <input class="form-check-input" asp-for="ExtraInformation.Livingroom" type="checkbox" disabled id="cb5">
                                <label class="form-check-label" for="cb5" data-i18n="Living room"></label>
                            </fieldset>
                            <fieldset class="form-check mb-2 pl-1 pr-1 col-6 col-sm-4 col-lg-3">
                                <input class="form-check-input" asp-for="ExtraInformation.Wc" type="checkbox" disabled id="cb012">
                                <label class="form-check-label" for="cb012" data-i18n="WC"></label>
