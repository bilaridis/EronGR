    <div class="card">
        <div class="card-header d-flex justify-content-center gradient">
            <strong class="mx-3 text-light" data-i18n="Property Features"></strong>
        </div>
        <div class="card-body">
            <!-- Section: Table -->
            <section>
                <form>
                    <div class="row px-4 disabled m-0">
                        <div class="col-lg input-group">
                            <fieldset class="form-check mb-2 pl-1 pr-1 col-6 col-sm-4 col-lg-3">
                                <input class="form-check-input" asp-for="ExtraInformation.HouseKeepingMoney" type="checkbox" disabled id="cb10">
                                <label class="form-check-label" for="cb10" data-i18n="Housekeeping"></label>
                            </fieldset>
                            <fieldset class="form-check mb-2 pl-1 pr-1 col-6 col-sm-4 col-lg-3">
