<script async defer crossorigin="anonymous" src="https://connect.facebook.net/el_GR/sdk.js#xfbml=1&version=v9.0&appId=715417039083770&autoLogAppEvents=1" nonce="DQCWc9c0"></script>*@
<nav class="navbar navbar-expand-md mt-2 mb-0 pt-0 pb-0 rounded">
    <ul class="navbar-nav mr-auto">
        <li>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb d-inline-flex pl-0 pt-0">
                    <li class="breadcrumb-item d-flex align-items-center"><a class="white-text" href="#!" data-i18n="@Model.Post.SaleCategory"> </a></li>
                    <li class="breadcrumb-item d-flex align-items-center active">@Model.Post.TitleOfPost</li>
                    <li class="breadcrumb-item d-flex align-items-center active" data-i18n="@Model.Post.SubTypeInformation.Desc"> </li>
                    <li class="breadcrumb-item d-flex align-items-center active" data-i18n="@Model.Post.SubTypeInformation.SubDescEnglish"> </li>
                    <li class="breadcrumb-item d-flex align-items-center active"><span data-i18n="Ad Code"></span> - @Model.Post.id</li>
                </ol>
            </nav>
        </li>
    </ul>
    <ul class="navbar-nav ml-auto">
        <li>
            <ul class="switch-locale" style="list-style:none;">
                <li clas="nav-item dropdown">
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm dropdown-toggle px-3 stylish-color " data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-language fa-1x"></i>
                        </button>
                        <div id="AdvLanguages" class="dropdown-menu dropdown-menu-lg-right">
                        </div>
                    </div>
                </li>
            </ul>
        </li>
    </ul>
</nav>

<div class="row mt-3">
    <!-- Section: Main panel -->
    <section class="mb-3 mt-1 col-12 p-0 p-sm-2">
        <!-- Card -->
        <div class="card card-cascade wider">
            <div class="view view-cascade overlay gradient">
                <div class="col-md-12">

                    <div id="mdb-lightbox-ui"></div>
                    <div class="mdb-lightbox no-margin">
                        @foreach (PostsImages image in Model.Post.Images)
                        {
                            <figure class="col-sm-3 col-6">
                                <a class="black-text" href="~/@(image.UrlImage)Images/@image.ImageName" data-size="@(image.Width)x@(image.Height)">
                                    <img alt="picture" src="~/@(image.UrlImage)Thumbnails/@image.ImageName" class="img-fluid">
                                </a>
                            </figure>
                        }
                    </div>
                </div>
            </div>
            <div class="card-body card-body-cascade pb-0 pt-1">
                <div class="row p-0 m-1 justify-content-between">
                    <nav class="navbar navbar-expand-md z-depth-0 m-0 white grey-text col-12 pl-2 pr-2 rounded">
                        <div class="mr-auto">
                            <nav aria-label="breadcrumb grey-text">
                                <ol class="breadcrumb d-inline-flex pl-0 pt-0 font-smaller">
                                    <li class="breadcrumb-item breadcrumb-nav light-blue-text"><strong>@Html.Raw(Model.Post.Square) m<sup>2</sup></strong></li>
                                    <li class="breadcrumb-item breadcrumb-nav grey-text"><i class="fas fa-bed pt-1 pr-1"></i> @Html.Raw(Model.Post.Bedroom.HasValue ? Model.Post.Bedroom.Value.ToString() : "0")</li>
                                    <li class="breadcrumb-item breadcrumb-nav grey-text"><i class="fas fa-bath pt-1 pr-1"></i> @Html.Raw(Model.Post.Bathroom.HasValue ? Model.Post.Bathroom.Value.ToString() : "0")</li>
                                    <li class="breadcrumb-item breadcrumb-nav grey-text"><i class="fas fa-home pt-1 pr-1"></i> @Html.Raw(Model.Post.ConstructionYear)</li>
                                </ol>
                            </nav>
                        </div>
                        @if (Model.Post.Premium && Model.Post.Preview360 != null && Model.Post.Preview360.Contains("matterport.com"))
                        {
                            <button type="button" class="btn btn-primary m-1 p-2 text-smaller" data-toggle="modal" data-target="#centralModalPreview360">
                                @SharedLocalizer.GetLocalizedHtml(StaticHelpers.GetDescription(LocalizedPhrases.Preview360))
                            </button>
                        }
                    </nav>
                </div>
                <div class="row m-md-2 m-sm-0 justify-content-between">
                    <div class="col-md-8 col-lg-6 text-smaller p-0">
                        <div class="card-body row">
                            <div class="text-right col-4 p-1 mb-1 grey-text" data-i18n="Price"></div>
                            <div class="text-left col-8 p-1 mb-1">
                                <a href="#" class="indigo-text">
                                    @if (Model.Post.PriceTotal.HasValue && Model.Post.PriceTotal.Value > 99)
                                    {
                                        @SharedLocalizer.ConvertCurrency(Model.Post.Currency, Model.Post.PriceTotal.Value, Model.Post.Currency)
                                    }
                                    else
                                    {
                                        <span class="badge badge-default rounded" data-i18n="Ask for the Price">
                                            @SharedLocalizer.GetLocalizedHtml(StaticHelpers.GetDescription(LocalizedPhrases.AskforthePrice))
                                        </span>
                                    }
                                </a>
                            </div>
                            <div class="text-right col-4 p-1 mb-1 grey-text" data-i18n="Year of Renovation"></div>
                            <div class="text-left col-8 p-1 mb-1">@Html.Raw(Model.Post.RenovationYear) </div>
                            <div class="text-right col-4 p-1 mb-1 grey-text" data-i18n="floor"></div>
                            <div class="text-left col-8 p-1 mb-1">
                                @(Model.Post.Floor == 0 ? " Ισόγειο" : Model.Post.Floor.ToString()) @if (Model.Post.Floor > 0)
                                {<sup>ος</sup>}
                            </div>
                            <div class="text-right col-4 p-1 mb-1 grey-text" data-i18n="Home Energy Rate"></div>
                            <div class="text-left col-8 p-1 mb-1">
                                <div class="btn-group btn-group-toggle col-lg energyEfficiency p-0" data-toggle="buttons">
                                    <label class="btn p-1 m-0 white-text form-check-label efficiency @(Model.Post.EnergyEfficiency == "A+" ? " btn-outline-info" :"")" style="background-color: #036703">
                                        <input type="radio" class="form-check-input disabled " value="A+" asp-for="Post.EnergyEfficiency" name="Post.EnergyEfficiency" />
                                        Α+
                                    </label>
                                    <label class="btn p-1 m-0 white-text form-check-label efficiency @(Model.Post.EnergyEfficiency == "A" ? " btn-outline-info" :"")" style="background-color: #048004">
                                        <input type="radio" class="form-check-input disabled " value="A" asp-for="Post.EnergyEfficiency" name="Post.EnergyEfficiency" />
                                        Α&nbsp;
                                    </label>
                                    <label class="btn p-1 m-0 white-text form-check-label efficiency @(Model.Post.EnergyEfficiency == "Β+" ? " btn-outline-info" :"")" style="background-color: #009c02">
                                        <input type="radio" class="form-check-input disabled " value="Β+" asp-for="Post.EnergyEfficiency" name="Post.EnergyEfficiency" />
                                        Β+
                                    </label>
                                    <label class="btn p-1 m-0 white-text form-check-label efficiency @(Model.Post.EnergyEfficiency == "Β" ? " btn-outline-info" :"")" style="background-color: #99cd00">
                                        <input type="radio" class="form-check-input disabled " value="Β" asp-for="Post.EnergyEfficiency" name="Post.EnergyEfficiency" />
                                        Β&nbsp;
                                    </label>
                                    <label class="btn p-1 m-0 white-text form-check-label efficiency @(Model.Post.EnergyEfficiency == "Γ" ? " btn-outline-info" :"")" style="background-color: #fdcc03">
                                        <input type="radio" class="form-check-input disabled " value="Γ" asp-for="Post.EnergyEfficiency" name="Post.EnergyEfficiency" />
                                        Γ&nbsp;
                                    </label>
                                    <label class="btn p-1 m-0 white-text form-check-label efficiency @(Model.Post.EnergyEfficiency == "Δ" ? " btn-outline-info" :"")" style="background-color: #fe6601">
                                        <input type="radio" class="form-check-input disabled " value="Δ" asp-for="Post.EnergyEfficiency" name="Post.EnergyEfficiency" />
                                        Δ&nbsp;
                                    </label>
                                    <label class="btn p-1 m-0 white-text form-check-label efficiency @(Model.Post.EnergyEfficiency == "Ε" ? " btn-outline-info" :"")" style="background-color: #f90203">
                                        <input type="radio" class="form-check-input disabled " value="Ε" asp-for="Post.EnergyEfficiency" name="Post.EnergyEfficiency" />
                                        Ε&nbsp;
                                    </label>
                                    <label class="btn p-1 m-0 white-text form-check-label efficiency @(Model.Post.EnergyEfficiency == "Ζ" ? " btn-outline-info" :"")" style="background-color: #a03000">
                                        <input type="radio" class="form-check-input disabled " value="Ζ" asp-for="Post.EnergyEfficiency" name="Post.EnergyEfficiency" />
                                        Ζ&nbsp;
                                    </label>
                                    <label class="btn p-1 m-0 white-text form-check-label efficiency @(Model.Post.EnergyEfficiency == "Η" ? " btn-outline-info" :"")" style="background-color: #7e0100">
                                        <input type="radio" class="form-check-input disabled " value="Η" asp-for="Post.EnergyEfficiency" name="Post.EnergyEfficiency" />
                                        Η&nbsp;
                                    </label>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                    <div class="col-md-4 d-flex justify-content-center justify-content-lg-end p-0">
                        <div id="ContactInfo">
                            <button id="getContactInfo" data-postid="@Model.Post.id" type="button" class="btn btn-info w-100" data-i18n="Contact Info"></button>
                        </div>
                    </div>
                    <div class="col-12 text-smaller p-0 d-none">
                        <div class="text-left col-12 p-1 mb-1 grey-text flex-row">
                            @if (Model.ExtraInformation.Investment)
                            {
                                <div class="chip chip-sm green darken-3 white-text px-2 z-depth-1">
                                    <i class="fas fa-check-circle mr-2 mt-1 pt-0"></i>@SharedLocalizer.GetLocalizedHtml(StaticHelpers.GetDescription(LocalizedPhrases.Investment))
                                </div>
                            }
                            @if (Model.ExtraInformation.Offer)
                            {
                                <div class="chip chip-sm green darken-3 white-text px-2 z-depth-1">
                                    <i class="fas fa-check-circle mr-2 mt-1 pt-0"></i>@SharedLocalizer.GetLocalizedHtml(StaticHelpers.GetDescription(LocalizedPhrases.Offer))
                                </div>
                            }
                            @if (Model.ExtraInformation.NewConstruction)
                            {
                                <div class="chip chip-sm green darken-3 white-text px-2 z-depth-1">
                                    <i class="fas fa-check-circle mr-2 mt-1 pt-0"></i>@SharedLocalizer.GetLocalizedHtml(StaticHelpers.GetDescription(LocalizedPhrases.NewConstruction))
                                </div>
                            }
                            @if (Model.ExtraInformation.BrokerFee)
                            {
                                <div class="chip chip-sm green darken-3 white-text px-2 z-depth-1">
                                    <i class="fas fa-check-circle mr-2 mt-1 pt-0"></i> @SharedLocalizer.GetLocalizedHtml(StaticHelpers.GetDescription(LocalizedPhrases.BrokerFee))
                                </div>
                            }
                            else
                            {
                                <div class="chip chip-sm pink darken-3 white-text px-2 z-depth-1">
                                    <i class="fas fa-times-circle mr-2 mt-1 pt-0"></i>@SharedLocalizer.GetLocalizedHtml(StaticHelpers.GetDescription(LocalizedPhrases.BrokerFee))
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer d-md-flex flex-sm-row justify-content-md-between">
                    <div class="d-flex align-items-start">
                        <div class="p-2 wish-container">
                            @if (Model.Post.WishLists.Any(x => x.AspNetUserId == user && x.Active == true))
                            {
                                <a data-postid="@Model.Post.id" href="#!" id="addToWhishList" class="details-heart details-unwish card-link" data-toggle="tooltip" title="@SharedLocalizer.GetLocalized(StaticHelpers.GetDescription(LocalizedPhrases.WishList))">
                                    <i class="fas fa-heart fa-1x pink-text"></i>
                                </a>
                            }
                            else
                            {
                                <a data-postid="@Model.Post.id" href="#!" id="addToWhishList" class="details-heart details-wish card-link" data-toggle="tooltip" title="@SharedLocalizer.GetLocalized(StaticHelpers.GetDescription(LocalizedPhrases.WishList))">
                                    <i class="far fa-heart fa-1x pink-text"></i>
                                </a>
                            }
                        </div>

                        <div class="p-2 note-container">
                            <a class="card-link" data-toggle="modal" data-target="#centralModalNotes" data-userid="@Model.CardProfile.AspNetUserId" title="@SharedLocalizer.GetLocalized(StaticHelpers.GetDescription(LocalizedPhrases.MyNotes))">
                                <i class="fas fa-pencil-alt fa-1x prefix grey-text"></i>
                            </a>
                        </div>
                        <div class="p-2">
                            <a class="card-link" id="printClick">
                                <i class="fas fa-print fa-1x prefix grey-text" data-toggle="tooltip" title="@SharedLocalizer.GetLocalized(StaticHelpers.GetDescription(LocalizedPhrases.Print))"></i>
                            </a>
                        </div>
                        <div class="p-2 view-container">
                            <a class="card-link" data-toggle="tooltip" title="@SharedLocalizer.GetLocalized(StaticHelpers.GetDescription(LocalizedPhrases.views))">
                                <i class="fas fa-eye fa-1x prefix grey-text"></i> <label class=" text-smaller grey-text"> @Model.CounterOfView <label data-i18n="views"></label> </label>  |
                            </a>
                        </div>

                        <div class="p-2">
                            <a class="card-link fb-xfbml-parse-ignore"
                               href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fwww.eron.gr%2FPosts%2FDetails%2F@(Model.Post.id)"
                               target="popup"
                               onclick="window.open('https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fwww.eron.gr%2FPosts%2FDetails%2F@(Model.Post.id)','popup','width=400,height=500'); return false;"
                               data-toggle="tooltip" title="@SharedLocalizer.GetLocalized(StaticHelpers.GetDescription(LocalizedPhrases.Share))">
                                <i class="fab fa-facebook-square blue-text darken-4"></i>
                            </a>
                        </div>

                    </div>
                    <div class="p-2">
                        <a href="~/Card/Index/@Model.Post.OwnerId" class="card-link pr-1">@Html.Raw(Model.CardProfile.Title) <i class="fas fa-external-link-alt fa-1x"></i></a>
                        @if (Model.Post.Reserved)
                        {
                            <small class="text-muted"> | @Html.Raw(Model.Post.CreatedDate.Value.ToString("dd/MM/yyyy")) | <span class="badge badge-warning" data-i18n="Locked"></span></small>
                        }
                        else if (Model.Post.Deleted)
                        {
                            <small class="text-muted"> | @Html.Raw(Model.Post.CreatedDate.Value.ToString("dd/MM/yyyy")) | <span class="badge badge-danger" data-i18n="Inactive"></span></small>
                        }
                        else if (Model.Post.Sold)
                        {
                            <small class="text-muted"> | @Html.Raw(Model.Post.CreatedDate.Value.ToString("dd/MM/yyyy")) | <span class="badge badge-secondary" data-i18n="Completed"></span></small>
                        }
                        else
                        {
                            <small class="text-muted"> | @Html.Raw(Model.Post.CreatedDate.Value.ToString("dd/MM/yyyy")) | <span class="badge badge-primary" data-i18n="Active"></span></small>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Section: Main panel -->

</div>
