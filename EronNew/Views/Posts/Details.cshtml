                            <fieldset class="form-check mb-2 pl-1 pr-1 col-6 col-sm-4 col-lg-3">
                                <input class="form-check-input" asp-for="ExtraInformation.Master" type="checkbox" disabled id="cb6">
                                <label class="form-check-label" for="cb6" data-i18n="Master"></label>
