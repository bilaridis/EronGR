@inject EronNew.Resources.GlobalCultureService SharedLocalizer
@using EronNew.Helpers
@using EronNew.Resources
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment hostingEnv
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Eron</title>
    <meta content="/images/logo.png" itemprop="image">
    <meta name="title" content="Eron.gr">
    <meta name="description" content="Καταχωρείστε τις αγγελίες σας στο Eron.gr.">
    <meta name="keywords" content="Advertisment,Real Estate,Ακίνητο,Πώληση,Ενοικίαση,Eron.gr">
    <meta name="robots" content="index, follow">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-16">
    <meta name="language" content="English">
    <meta name="revisit-after" content="5 days">
    <meta name="author" content="Vasileios Valasidis">
    <meta property="fb:app_id" content="407388710507530" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Eron.gr" />
    <meta property="og:url" content="https://www.eron.gr" />
    <meta property="og:image" content="https://www.eron.gr/images/image.png" />
    <meta property="og:description" content="Καταχωρείστε τις αγγελίες σας στο Eron.gr." />
    @RenderSection("metatags", false)
    <style>
        @@media (min-width: 1400px) {
            main,
            header,
            #main-navbar,
            #message-input {
                padding-left: 240px;
            }
        }

        #mainLogo {
            display: none !important;
        }
    </style>
    <partial name="_partialStyleSheets.cshtml" />
    <link rel="stylesheet" type="text/css" href="https://js.api.here.com/v3/3.1/mapsjs-ui.css" />
    @if (hostingEnv.EnvironmentName == "Production")
    {
        <!-- Hotjar Tracking Code for www.eron.gr -->
