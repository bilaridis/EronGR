@inject EronNew.Resources.GlobalCultureService SharedLocalizer
@using EronNew.Helpers
@using EronNew.Resources

<section class="d-flex flex-row justify-content-between align-items-center rounded mt-3">
    <div>
        <select id="sort" class="select mt-2">
            <option value="-Premium">@SharedLocalizer.GetLocalized(StaticHelpers.GetDescription(LocalizedPhrases.MostPopular))</option>
            <option value="PriceTotal">@SharedLocalizer.GetLocalized(StaticHelpers.GetDescription(LocalizedPhrases.LowestToHighest))</option>
            <option value="-PriceTotal">@SharedLocalizer.GetLocalized(StaticHelpers.GetDescription(LocalizedPhrases.HighestLowestPrice))</option>
        </select>
        <label class="form-label select-label">@SharedLocalizer.GetLocalized(StaticHelpers.GetDescription(LocalizedPhrases.Rating))</label>
    </div>
    <div class="custom-buttons me-2">
    </div>
</section>
<section id="infinite-list" class="d-md-flex flex-md-row scrollbar-2 scrollbar-lg-3 scrollbar-navy-blue-skin overflow-scroll">
    <div id="loader" class="loader-overlay" style="display: none;">
        <div class="preloader-wrapper active">
            <div class="spinner-layer spinner-blue-only">
                <div class="circle-clipper left">
                    <div class="circle"></div>
                </div>
                <div class="gap-patch">
                    <div class="circle"></div>
                </div>
                <div class="circle-clipper right">
                    <div class="circle"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex flex-wrap col-12 pb-3" id="products">
    </div>
</section>