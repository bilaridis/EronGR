@model EronNew.Models.BasicInformationBase
@inject EronNew.Resources.GlobalCultureService SharedLocalizer
@using EronNew.Helpers
@using EronNew.Resources

<div class="col-sm-12 col-md-4 mb-3">
    <div class="card promoting-card m-2">
        <a href="/Posts/Details/@Model.Id">
            <div class="d-flex flex-row m-1" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                <label class="form-check-label font-weight-bold mb-0 mr-0" data-toggle="tooltip" title="@Model.Title"><span class="badge badge-primary text-wrap">@SharedLocalizer.GetLocalized(Model.Category) </span> > @Model.Title @Model.Premium</label>
            </div>
        </a>
        <div class="view overlay z-depth-1">
            <img class="card-img-top rounded-0" src="@Model.UrlImage" alt="Image Profile">
            <a href="/Posts/Details/@Model.Id">
                <div class="mask img-gradient">
                    <span class="text-default btn-sm" style="position: absolute; top: 0px; left: 0px;">
                        #@Model.Id
                    </span>
                    <span class="form-check-label px-2 rounded mdb-color white-text" style="position: absolute; bottom: 10px; right: 10px;">
                        @Html.Raw(Model.CreatedDate.Value.ToString("dd/MM/yyyy")) <i class="fas fa-clock"></i>
                    </span>
                </div>
            </a>
        </div>
        <div class="card-body d-flex px-2 py-1 form-check-label">
            <span class="p-0 pt-2">
                @(Model.PriceTotal.HasValue ? Model.PriceTotal.Value.ToString("C") : 0) - @(Model.Square.HasValue ? Model.Square.Value.ToString("F") : 0) <b>m<sup>2</sup></b> - @Model.ConstructionYear <i class="fas fa-home"></i>
            </span>
            <a type="button" href="#!" data-postid="@Model.Id" class="details-heart @(Model.WishList == true ? " details-unwish" : "details-wish" ) btn-sm ml-auto pb-0 justify-content-end">
                <i class="@(Model.WishList == true ? " fas" : "far" ) fa-heart fa-1x pink-text"></i>
            </a>
        </div>
    </div>
</div> 