@model EronNew.Models.BasicInformationBase
@inject EronNew.Resources.GlobalCultureService SharedLocalizer


<div class="multi-carousel-item">
    <div class="card promoting-card m-2">
        <a href="/Posts/Details/@Model.Id">
            <div class="d-flex flex-row m-1" style="white-space: normal; overflow: visible; text-overflow: ellipsis;" >
                <small><span class="badge rounded-pill bg-primary shadow-1-strong">@SharedLocalizer.GetLocalized(Model.Category) </span> @Model.Title </small>
            </div>
        </a>
        <div class="bg-image hover-overlay hover-zoom hover-shadow shadow-1">
            <img class="card-img-top rounded-0" src="@Model.UrlImage" alt="Image Profile">
            <a href="/Posts/Details/@Model.Id">
                <div class="mask" style="background:rgba(75, 75, 75, 0.35);">
                    <span class="text-default btn-sm" style="position: absolute; top: 0px; left: 0px;">
                        #@Model.Id
                    </span>
                    <span class="text-default btn-sm" style="position: absolute; top: 0px; right: 0px;">
                        @@@Model.Premium
                    </span>
                    <span class="form-check-label px-2 rounded mdb-color white-text" style="position: absolute; bottom: 10px; right: 10px;">
                        @Html.Raw(Model.CreatedDate.Value.ToString("dd/MM/yyyy")) <i class="fas fa-clock"></i>
                    </span>
                </div>
            </a>
        </div>
        <div class="card-body d-flex pe-0">
            <small class="p-0 pt-2">
                @(Model.PriceTotal.HasValue ? Model.PriceTotal.Value.ToString("N2") : 0) @SharedLocalizer.GetCurrencySymbol(Model.Currency) - @(Model.Square.HasValue ? Model.Square.Value.ToString("F") : 0) <b>m<sup>2</sup></b> - @Model.ConstructionYear <i class="fas fa-home"></i>
            </small>
            <button href="#!" data-postid="@Model.Id" class="btn shadow-0 details-heart @(Model.WishList == true ? "details-unwish" : "details-wish" ) ms-auto justify-content-end">
                <i class="@(Model.WishList == true ? "fas" : "far" ) fa-heart fa-1x text-danger"></i>
            </button>
        </div>
    </div>
</div> 